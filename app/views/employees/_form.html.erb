<div class="col-xs-8 col-xs-offset-2">
	<%= simple_form_for [@location, @employee] do |f| %>
	
		<% if @employee.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

				<ul>
				<% @employee.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-group label-floating">
			<%= f.label :name, class: "control-label" %>
			<%= f.text_field :name, :autofocus => true , class: "form-control" %>
		</div>
		<div class="form-group label-floating" id="test">
			<%= f.label :phone, class: "control-label" %>
			<%= f.text_field :phone, class: "form-control", placeholder: "" %>
		</div>
		<div class="form-group label-floating">
			<%= f.label :email, class: "control-label" %>
			<%= f.text_field :email, class: "form-control" %>
		</div>
		<div class="form-group label-floating">
			<%= f.label :user_id, class: "control-label" %>
			<%= f.text_field :user_id, class: "form-control" %>
		</div>
		<div class="form-group label-floating">
			<%= f.label :timecard_id, class: "control-label" %>
			<%= f.number_field :user_id, class: "form-control" %>
		</div>
		
		<div class="actions">
			<%= f.submit "Submit", class: "col-xs-12 btn btn-primary text-white" %>
		</div>
		
	<% end %>
</div>

<script>
	$(".form-control").each(function() {
		if ( $(this).val() == "" ) {
			$(this).parent().addClass("is-empty");
		}
	})
</script>
